{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4"> 
    <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md">
        <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Connexion</h1>

        {% if error %}
            <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
                Identifiants incorrects.
            </div>
        {% endif %}

        <form method="post" class="space-y-4">

            <div>
                <label for="inputUsername" class="block text-sm font-medium text-gray-700">Nom d'utilisateur</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" autocomplete="username" required autofocus>
            </div>
            
            <div>
                <label for="inputPassword" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" autocomplete="current-password" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" required>
            </div>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#<div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>#}

            <button class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition" type="submit">
                Se connecter
            </button>

            <p class="text-sm text-gray-600 mt-4 text-center">
                Pas encore de compte ?
                <a href="{{ url('app_register') }}" class="text-blue-600 hover:underline">Cr√©er un compte</a>
            </p>
        </form>
    </div>
</div>

{% endblock %}
