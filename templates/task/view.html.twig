{% extends 'base.html.twig' %}

{% block title %}Détails de {{ task.name }}{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4 py-6">
  <div class="bg-white shadow-lg rounded-xl w-full max-w-lg p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">{{ task.name }}</h1>

    <p class="text-gray-700 mb-4">{{ task.description }}</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
      <div>
        <span class="font-semibold text-gray-600">Assignée à :</span>
        <p class="text-gray-800">{{ task.user.username }}</p>
      </div>

      <div>
        <span class="font-semibold text-gray-600">Statut :</span>
        {% if task.treatedAt %}
          <span class="px-2 inline-flex text-xs font-semibold rounded-full bg-green-100 text-green-800">
            Finalisée
          </span>
        {% else %}
          <span class="px-2 inline-flex text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
            En cours
          </span>
        {% endif %}
      </div>

      <div>
        <span class="font-semibold text-gray-600">Créée le :</span>
        <p class="text-gray-800">{{ task.createdAt|date("d/m/Y H:i") }}</p>
      </div>

      <div>
        <span class="font-semibold text-gray-600">À faire avant :</span>
        <p class="text-gray-800">{{ task.toDoBefore|date("d/m/Y H:i") }}</p>
      </div>

      {% if task.treatedAt %}
      <div>
        <span class="font-semibold text-gray-600">Traité le :</span>
        <p class="text-gray-800">{{ task.treatedAt|date("d/m/Y H:i") }}</p>
      </div>
      {% endif %}
    </div>

    <div class="flex justify-end gap-3 mt-4">
      <a href="{{ url('task_edit', {'id': task.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition">
        Modifier
      </a>
      <a href="{{ url('task_delete', {'id': task.id}) }}" class="bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-lg transition">
        Supprimer
      </a>
    </div>
  </div>
</div>
{% endblock %}
