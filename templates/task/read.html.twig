{% extends 'base.html.twig' %}

{% block title %}Gestion des tâches{% endblock %}

{% block body %}

<div class="overflow-x-auto px-4 py-6">

    <select name="filter" id="filter">
        <option value="">Filtrer par</option>
        <option value="all">Toutes</option>
        <option value="current">En cours</option>
        <option value="over">Finalisées</option>
    </select>

    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titre</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date de création</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">À effectuer avant le</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Personne affectée</th>
                <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            {% for task in tasks %}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2 whitespace-nowrap text-sm font-medium text-gray-900">{{ task.name }}</td>
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700 max-w-xs overflow-hidden text-ellipsis whitespace-nowrap">{{ task.description }}</td>
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">{{ task.createdAt | date("d/m/Y") }}</td>
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">{{ task.toDoBefore | date("d/m/Y") }}</td>
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">{{ task.user.username }}</td>
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700">
                        {% if task.treatedAt is null %}
                            Non traitée
                        {% elseif task.treatedAt and task.finalizedAt is null %}
                            En cours
                        {% else %}                            
                            Finalisée le {{ task.finalizedAt | date("d/m/Y") }} à {{ task.finalizedAt | date("h:i") }}
                        {% endif %}
                    </td>
                    <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-500">
                        <a href={{ url("task_view", { id: task.id }) }} class="text-green-600 hover:text-green-900">Voir</a>
                        <a href={{ url("task_edit", { id: task.id }) }} class="text-blue-600 hover:text-blue-900">Modifier</a>
                        <a href={{ url("task_delete", { id: task.id }) }} class="text-red-600 hover:text-red-900">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% for i in 0..nbPages %}
    <a href="{{ url('read_tasks', { 'filter': filter, 'page': i + 1 }) }}" class="{{ i + 1 == page ? 'text-blue-600 font-bold' : 'text-black' }}">{{ i + 1 }}</a>
{% endfor %}

<script>
    document.getElementById('filter').addEventListener('change', function()
    {
        const filter = this.value;
        let url = "{{ url('read_tasks') }}";

        if (filter !== 'all')
        {
            url = "{{ url('read_tasks', {'filter': 'PLACEHOLDER', 'page': 1}) | raw }}".replace('PLACEHOLDER', filter);
        }

        window.location.href = url;
    });
</script>

{% endblock %}
