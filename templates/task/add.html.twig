{% extends 'base.html.twig' %}

{% block title %}Ajouter une tâche{% endblock %}

{% block body %}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md">
    <h1 class="text-xl font-bold text-gray-800 mb-6 text-center">Ajouter une tâche</h1>

    {{ form_start(form, { 'attr': { 'class': 'flex flex-col gap-4' } }) }}

        {{ form_label(form.name, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
        {{ form_widget(form.name, { 'attr': { 'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2' } }) }}
        
        {{ form_label(form.description, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
        {{ form_widget(form.description, { 'attr': { 'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2' } }) }}

        {{ form_label(form.toDoBefore, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
        {{ form_widget(form.toDoBefore, { 'attr': { 'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2' } }) }}

        {{ form_label(form.user, null, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' } }) }}
        {{ form_widget(form.user, { 'attr': { 'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2' } }) }}

    {{ form_end(form) }}

    </div>
</div>

{% endblock %}