{% extends 'base.html.twig' %}

{% block title %}Vos tâches assignées{% endblock %}

{% block body %}

<div class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Vos tâches assignées</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for task in tasks %}
      <div class="bg-white shadow-lg rounded-xl p-4 flex flex-col justify-between">
        <div>
          <h2 class="text-lg font-bold text-gray-800 mb-2">{{ task.name }}</h2>
          <p class="text-gray-600 mb-2">{{ task.description }}</p>
          <p class="text-sm text-gray-500">
            Assignée à : <span class="font-medium">{{ task.user.username }}</span>
          </p>
        </div>
        <div class="mt-4 flex justify-between items-center">
          {% if task.treatedAt %}
            <span class="text-green-600 font-semibold text-sm">Traitée</span>
          {% elseif task.treatedAt and task.finalizedAt is null %}
            <span class="text-yellow-500 font-semibold text-sm">En cours</span>
          {% endif %}
          <span class="text-gray-400 text-sm">
            À faire avant : {{ task.toDoBefore | date("d/m/Y") }}
          </span>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% endblock %}
